<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>ledge-common</artifactId>
    <groupId>org.objectledge</groupId>
    <version>1.1.6</version>
    <relativePath>../ledge-common/pom.xml</relativePath>
  </parent>
  <artifactId>ledge-forms-fckeditor</artifactId>
  <packaging>war</packaging>
  <name>Visual HTMLArea plugin for ledge-forms using FCKEditor</name>
  <dependencies>
    <dependency>
      <groupId>com.ckeditor</groupId>
      <artifactId>ckeditor</artifactId>
      <version>3.6.1</version>
      <type>war</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <overlays>
            <overlay>
              <groupId>com.ckeditor</groupId>
              <artifactId>ckeditor</artifactId>
              <includes>
                <include>ckeditor/**</include>
              </includes>
              <targetPath>content</targetPath>
            </overlay>
          </overlays>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>