<?xml version="1.0" encoding="ISO-8859-2"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>../ledge-reactor/shared/project.xml</extend>

  <name>Ledge tutorial webapp</name>
  <id>ledge-tutorial-webapp</id>
  <groupId>objectledge</groupId>
  <currentVersion>0.3-dev</currentVersion>
  
  <dependencies>
    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
      <url>http://jakarta.apache.org/builds/jakarta-servletapi/</url>
    </dependency>
   
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.1-rc2</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
      <url>http://dna.jcontainer.org</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-impl</artifactId>
      <version>1.1-rc2</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
      <url>http://dna.jcontainer.org</url>
    </dependency>
    <dependency>
      <groupId>jing</groupId>
      <artifactId>jing</artifactId>
      <version>20030619</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
      <url>http://www.thaiopensource.com/relaxng/jing.html</url>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
      <url>http://jakarta.apache.org/log4j/docs/index.html</url>
    </dependency>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-components</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-container</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-web</artifactId>
      <version>SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    <dependency>
      <groupId>nanocontainer</groupId>
      <artifactId>nanocontainer</artifactId>
      <version>1.0-beta-1-SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
       <url>http://nanocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer</artifactId>
      <version>1.0-RC-1-SNAPSHOT</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
       <url>http://picocontainer.org/</url>
    </dependency>
    <dependency>
      <id>commons-collections</id>
      <version>2.1</version>
      <url>http://jakarta.apache.org./commons/collections.html</url>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
    <dependency>
      <id>velocity</id>
      <version>1.4-dev</version>
      <url>http://jakarata.apache.org/velocity</url>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>      
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/jar-resources</directory>
      </resource>
    </resources>
  </build>
</project>  